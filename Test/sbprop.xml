<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
	<CodeSnippet Format="1.0.0">
		<Header>
			<Title>sbprop</Title>
			<Description>Property declaration compatible with my impl of INotifyPropertyChanged</Description>
			<Shortcut>sbprop</Shortcut>
		</Header>
		<Snippet>
			<Code Language="CSharp">
				<![CDATA[]]>
				public $PTYPE$ $PROP$
				{
					get => _$PROP$;
					set => SetField(ref _$PROP$, value, nameof($PROP));
				}
			</Code>
			<Declarations>
				<Literal>
					<ID>PTYPE</ID>
					<ToolTip>property type</ToolTip>
					<Default>type</Default>
				</Literal>
				<Literal>
					<ID>PROP</ID>
					<ToolTip>property name</ToolTip>
					<Default>prop</Default>
				</Literal>
			</Declarations>
		</Snippet>
	</CodeSnippet>
</CodeSnippets>
